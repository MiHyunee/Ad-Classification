{
    "manifest_version": 2,
    "name": "EraseAd",
    "description": "블로그의 광고 글을 분류해줘요!",
    "version": "1.0",

    "browser_action": {
        "default_title": "EraseAd",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js/jquery-3.6.0.min.js","js/popup.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "<all_urls>",
        "tabs"
    ],
    "content_scripts": [{
        "matches": ["https://section.blog.naver.com/*"],
        "js": ["js/jquery-3.6.0.min.js"]
    }]
}